pipeline{
    agent any
    stages{
        stage("Build"){ 
            when {
                allOf {
                    expression {
                        return env.BUILD_NUMBER == 11
                    }
                    environment ignoreCase: true, name: 'branch', value: 'dev'
                }
                anyOf {
                    branch "master";
                    branch "dev"
                }
            }
            steps{
                sh "sh ./scripts/build.sh"
                sh "echo 'this is on dev branch'"
            }
        }
        stage("Deliver"){
            steps{
                sh "sh ./scripts/run.sh"
                sh "echo 'added auto trigger'"
            }
        }
    }
    post {
        always {
            sh "docker stop expressapp"
        }
    }
}