pipeline{
    agent any
    options {
        timestamps()
    }
    stages{
        stage("Build"){ 
            when {
                anyOf {
                    branch "master";
                    branch "dev"
                }
            }
            steps{
                sh "sh ./scripts/build.sh"
                sh "echo 'this is on dev branch'"
            }
        }
        stage("Deliver"){
            when {
                not branch "master"
            }
            steps{
                sh "echo ${env.BUILD_NUMBER}"
                sh "sh ./scripts/run.sh"
                sh "echo 'added auto trigger'"
            }
        }
    }
    post {
        always {
            sh "docker stop expressapp"
        }
    }
}